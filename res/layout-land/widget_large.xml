<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="true"
    style="@style/WidgetBackground">

    <TextView
        android:id="@+id/location"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:ellipsize="end"
        style="@style/Text.Location" 
        />

     <TextView
         android:id="@+id/current_temp"
         android:layout_width="wrap_content" 
         android:layout_height="wrap_content"
		 android:layout_below="@id/location"
         android:includeFontPadding="false"
         android:text="10°C"
         style="@style/Text.Conditions" />

    <TextView
         android:id="@+id/update_status"
         android:layout_width="wrap_content" 
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_alignParentRight="true"
         android:includeFontPadding="false"
         android:text="*"
         style="@style/Text.Conditions" />

    <LinearLayout
        android:id="@+id/forecast_block"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="5dip"
        android:paddingLeft="10dip"
        android:orientation="horizontal"
        android:duplicateParentState="true"
        >

	    <RelativeLayout
	        android:id="@+id/forecast_block_day1"
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dip"
 	        android:duplicateParentState="true" 
			>
				
		    <ImageView
		        android:id="@+id/icon1"
		        android:layout_width="wrap_content" 
		        android:layout_height="wrap_content"/>
		
	        <TextView
	            android:id="@+id/day1"
	            android:layout_width="wrap_content" 
	            android:layout_height="wrap_content"
	            android:layout_alignBottom="@id/icon1"
	            android:includeFontPadding="false"
	            android:ellipsize="none"
	            android:text="LUN"
	            style="@style/Text.Conditions" />

	        <TextView
	            android:id="@+id/temp_day1"
	            android:layout_width="wrap_content" 
	            android:layout_height="wrap_content"
	            android:layout_below="@id/icon1"
	            android:includeFontPadding="false"
	            android:ellipsize="none"
	            android:text="8/15°C"
	            style="@style/Text.Location" />
	
		</RelativeLayout>
		
	    <RelativeLayout
	        android:id="@+id/forecast_block_day2"
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dip"
			android:layout_toRightOf="@id/forecast_block_day2"
	        android:duplicateParentState="true" 
			>	
			
		    <ImageView
		        android:id="@+id/icon2"
		        android:layout_width="wrap_content" 
		        android:layout_height="wrap_content"/>
		
	        <TextView
	            android:id="@+id/day2"
	            android:layout_width="wrap_content" 
	            android:layout_height="wrap_content"
	            android:layout_alignBottom="@id/icon2"
	            android:includeFontPadding="false"
	            android:ellipsize="none"
	            android:text="LUN"
	            style="@style/Text.Conditions" />

	        <TextView
	            android:id="@+id/temp_day2"
	            android:layout_width="wrap_content" 
	            android:layout_height="wrap_content"
	            android:layout_below="@id/icon2"
	            android:includeFontPadding="false"
	            android:ellipsize="none"
	            android:text="8/15°C"
	            style="@style/Text.Location" />
	
		</RelativeLayout>	
				
	    <RelativeLayout
	        android:id="@+id/forecast_block_day3"
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dip"
			android:layout_toRightOf="@id/forecast_block_day3"
	        android:duplicateParentState="true" 
			>	
			
		    <ImageView
		        android:id="@+id/icon3"
		        android:layout_width="wrap_content" 
		        android:layout_height="wrap_content"/>
		
	        <TextView
	            android:id="@+id/day3"
	            android:layout_width="wrap_content" 
	            android:layout_height="wrap_content"
	            android:layout_alignBottom="@id/icon3"
	            android:includeFontPadding="false"
	            android:ellipsize="none"
	            android:text="LUN"
	            style="@style/Text.Conditions" />

	        <TextView
	            android:id="@+id/temp_day3"
	            android:layout_width="wrap_content" 
	            android:layout_height="wrap_content"
	            android:layout_below="@id/icon3"
	            android:includeFontPadding="false"
	            android:ellipsize="none"
	            android:text="8/15°C"
	            style="@style/Text.Location" />
	
		</RelativeLayout>
				
		
	    <RelativeLayout
	        android:id="@+id/forecast_block_day4"
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dip"
			android:layout_toRightOf="@id/forecast_block_day4"
	        android:duplicateParentState="true" 
			>	
			
		    <ImageView
		        android:id="@+id/icon4"
		        android:layout_width="wrap_content" 
		        android:layout_height="wrap_content"/>
		
	        <TextView
	            android:id="@+id/day4"
	            android:layout_width="wrap_content" 
	            android:layout_height="wrap_content"
	            android:layout_alignBottom="@id/icon4"
	            android:includeFontPadding="false"
	            android:ellipsize="none"
	            android:text="LUN"
	            style="@style/Text.Conditions" />

	        <TextView
	            android:id="@+id/temp_day4"
	            android:layout_width="wrap_content" 
	            android:layout_height="wrap_content"
	            android:layout_below="@id/icon4"
	            android:includeFontPadding="false"
	            android:ellipsize="none"
	            android:text="8/15°C"
	            style="@style/Text.Location" />
	
		</RelativeLayout>

	</LinearLayout>
	
</RelativeLayout>